{# templates/form/program_form.html.twig #}

{% extends 'base1.html.twig' %}

{% block title %}Add Program{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
   <main id="main" class="main">
    
 <section class="section dashboard">
            <div class="row">
                <h1>Add Program</h1>
               
                        {% for flashMessage in app.flashes('danger') %}
                           <div class="alert alert-danger" role="alert">
                        {{ flashMessage }}
                    </div>
                        {% endfor %}
                    
                
                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            
                            <div>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            </div><div>
                            {{ form_errors(form.nom) }}
                        </div>
                            
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            
                            <div>{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div><div>
                            {{ form_errors(form.description) }}
                        </div>
                             
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.duree, 'Dur√©e', {'label_attr': {'class': 'form-label'}}) }}

                        
                        <div>
                            {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
                             </div><div>
                            {{ form_errors(form.duree) }}
                        </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.registration_deadline, 'Date limite d\'inscription', {'label_attr': {'class': 'form-label'}}) }}
                             <div >
                                {{ form_widget(form.registration_deadline, {'attr': {'class': 'form-control', 'type': 'text', 'id': 'registration_deadline'}}) }}
                                
                            </div><div>
                            {{ form_errors(form.registration_deadline) }}
                        </div> 
                           
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.prix, 'Prix', {'label_attr': {'class': 'form-label'}}) }}
                           <div>
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
                           </div> <div>
                            {{ form_errors(form.prix) }}
                        </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            {{ form_label(form.imgsrc, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                           
                           <div>
                            {{ form_widget(form.imgsrc, {'attr': {'class': 'form-control'}}) }}
                           </div><div>
                            {{ form_errors(form.imgsrc) }}
                        </div></div>
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_widget(form.Save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </section>
   </main>
{% endblock %}
{% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                document.querySelector('.alert').remove();
            }, 3000); // Remove the alert after 3 seconds
        });
    </script>
{% endblock %}