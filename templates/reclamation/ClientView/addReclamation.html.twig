{% extends 'baseClient.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h1 class="mb-4">Ajouter une Réclamation</h1>

                {{ form_start(form, {'attr': {'class': 'form'}}) }}
                <div class="form-group">
                    {{ form_row(form.titre, {'label': 'Titre', 'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.type, {'label': 'Type', 'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.description, {'label': 'Description', 'attr': {'class': 'form-control', 'rows': 4, 'placeholder': 'Entrez la description'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.dateReclamation, {'label': 'Date de Réclamation', 'attr': {'class': 'form-control'}}) }}
                </div>
             
                <button type="submit" class="btn btn-primary">Ajouter Réclamation</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
