<!DOCTYPE html>
<html lang="en">
<head>
   <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container-wrapper {
            margin-left: 250px; /* Adjust as needed */
            margin-top: 50px; /* Adjust as needed */
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            padding: 20px;
        }

        .user-container {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 20px;
            padding: 20px;
            width: 280px;
            text-align: center;
            transition: transform 0.3s ease;
        }

        .user-container:hover {
            transform: translateY(-5px);
        }

        .user-container img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
            object-fit: cover;
            margin-bottom: 20px;
        }

        .user-info h1 {
            margin: 0;
            font-size: 24px;
            color: #333;
        }

        .user-info p {
            margin: 5px 0;
            color: #666;
        }

        .consulter a {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            margin: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none; /* Ensure link text decoration is removed */
            display: inline-block; /* Ensure link behaves like a block element */
        }

        .consulter a:hover {
            background-color: #0056b3;
        }

        button {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            margin: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }
        .consulter-user {
            position: absolute;
            right: 4%;
            top: 3%;
            width: 200px;
            top: 8px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            margin: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
        }

        .filter-container {
            margin: 20px auto;
            width: 200px;
            text-align: center;
        }

        .filter-dropdown {
            appearance: none;
            -webkit-appearance: none;
            -moz-appearance: none;
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 4px;
            padding: 8px 16px;
            font-size: 16px;
            color: #333333;
            cursor: pointer;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .filter-dropdown:hover {
            border-color: #007bff;
        }

        .filter-dropdown:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }

        .search-container {
            margin: 20px auto; /* Adjust as needed */
            width: 200px; /* Adjust width as needed */
            text-align: center;
        }

        .search-input {
            padding: 8px 16px;
            width: 100%;
            box-sizing: border-box;
            border: 1px solid #cccccc;
            border-radius: 4px;
            font-size: 16px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .search-input:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }
        .all {
            display : flex ; 
            width : 40% ;
            margin : auto ;
        }

        h2{
            text-align : center;
        }
    </style>
</head>
<body>
{% include 'admin/component/sideBar.html.twig' %}
 <div class="consulter-user">
    <a href="{{ path('addUserPage') }}">Add User</a>
 </div>
 <h2>Search for an user</h2>
 <section class="all">
 <div class="filter-container">
    <label for="role-filter"></label>
    <select id="role-filter" class="filter-dropdown">
        <option value="all" selected>All Users</option>
        <option value="admin">Admin</option>
        <option value="coach">Coach</option>
    </select>
 </div>
 <div class="search-container">
    <label for="user-search"></label>
    <input type="text" id="user-search" class="search-input" placeholder="Enter user ID...">
 </div>
 </section>
 <div class="container-wrapper">
    <div class="container"> 
    {% for user in users %}
    <div class="user-container" data-user-id="{{ user.idUser }}" data-role="{{ user.isAdmin ? 'admin' : (user.isCoach ? 'coach' : 'user') }}">
        {% if user.photoProfile %}
            <img src="{{ asset('images/' ~ user.photoProfile) }}" alt="{{ user.nom }}" />
        {% else %}
            <!-- If the user doesn't have a profile photo, you can display a default placeholder image -->
            <img src="{{ asset('images/default_profile_image.jpg') }}" alt="Default Profile Image" />
        {% endif %}
        <div class="user-info">
            <h1>{{ user.nom }}</h1>
            <p>{{ user.isAdmin ? 'Admin' : 'User' }}</p>
        </div>
        <div class="consulter">
            <form method="post" action="{{ path('deleteUser', {'id': user.idUser}) }}" onsubmit="return confirm('Are you sure you want to delete this user?')">
                <a href="{{ path('userDetail', {'id': user.idUser}) }}">consulter</a>
                <a href="{{ path('deleteUser', {'id': user.idUser}) }}" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
            </form>
        </div>
    </div>
{% endfor %}

    </div>
 </div>

 <script>
    const roleFilter = document.getElementById('role-filter');
    const userContainers = document.querySelectorAll('.user-container');
    const searchInput = document.getElementById('user-search');

    roleFilter.addEventListener('change', () => {
        const selectedRole = roleFilter.value;
        userContainers.forEach(container => {
            const userRole = container.dataset.role;
            if (selectedRole === 'all' || userRole === selectedRole) {
                container.style.display = 'block';
            } else {
                container.style.display = 'none';
            }
        });
    });

    searchInput.addEventListener('input', () => {
        const searchValue = searchInput.value.trim();
        userContainers.forEach(container => {
            const userId = container.dataset.userId;
            if (!searchValue || userId.includes(searchValue)) {
                container.style.display = 'block';
            } else {
                container.style.display = 'none';
            }
        });
    });
 </script>
</body>
</html>
