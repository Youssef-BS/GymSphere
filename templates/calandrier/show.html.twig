{% extends 'base.html.twig' %}

{% block title %}Calandrier{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
<style>
    .card {
        margin: 20px auto;
        max-width: 600px;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .card table {
        width: 100%;
        margin-bottom: 20px;
    }

    .card th,
    .card td {
        padding: 10px;
        border-bottom: 1px solid #dee2e6;
    }

    .card th {
        text-align: left;
        background-color: #f8f9fa;
        color: #6c757d;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .card a {
        margin-right: 10px;
        text-decoration: none;
        color: #007bff;
        transition: color 0.3s ease;
    }

    .card a:hover {
        color: #0056b3;
    }
    
</style>
<div class="card">
    <h1 class="text-center">Calandrier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Idcalandrier</th>
                <td>{{ calandrier.idcalandrier }}</td>
            </tr>
            <tr>
                <th>DateActivite</th>
                <td>{{ calandrier.dateActivite ? calandrier.dateActivite|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Typeactivite</th>
                <td>{{ calandrier.typeactivite }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ calandrier.description }}</td>
            </tr>
            <tr>
                <th>Heurefermuture</th>
                <td>{{ calandrier.heurefermuture }}</td>
            </tr>
            <tr>
                <th>Idgym</th>
                <td>{{ calandrier.idgym }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_calandrier_index') }}" class="btn btn-primary">Back to List</a>

    <a href="{{ path('app_calandrier_edit', {'idcalandrier': calandrier.idcalandrier}) }}" class="btn btn-secondary">Edit</a>

    {{ include('calandrier/_delete_form.html.twig') }}
</div>
{% endblock %}
