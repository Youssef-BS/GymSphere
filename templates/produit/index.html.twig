<style>
.container {
    display : flex;
    margin : 0;
}
</style>
<body>
<div class="container">
{% include 'admin/component/sideBar.html.twig' %}
 
{% block title %}Product List{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
<a href="{{ path('add_produit') }}">Add Product</a>
    <table border="1">
    
        <thead>
        
            <th>id</th>
            <th>nom</th>
            <th>prix</th>
            <th>Action</th>
        </thead>
        <tbody>
        
        <tr>
        
        
            {% for produit in b %}
                <tr>
                    <td>{{ produit.idProduit }}</td>
                    <td>{{ produit.nomProduit }}</td>
                    <td>{{ produit.prixProduit }}</td>
                    <td>{{ produit.photoProduit }}</td>
                    <td>{{ produit.QuantiteProduit }}</td>
                    <td><a href="{{ path('up_produit', {'idProduit': produit.idProduit}) }}">Update</a></td>
                    <td><a href="{{ path('del_produit', {'idProduit': produit.idProduit}) }}">Delete</a></td>
                    

                </tr>
            {% endfor %}
            
        </tbody>
     
        
        
    </table>
    
  
</div>

{% endblock %}
</div>
</body>
</html>



