{% extends 'base.html.twig' %}

{% block title %}Répondre{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 mb-4">Répondre</h1>

        <div class="card mb-4">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ repondre.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Titre</th>
                            <td>{{ repondre.titre }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Réponse</th>
                            <td>{{ repondre.reponse }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date de Réponse</th>
                            <td>{{ repondre.dateReponse ? repondre.dateReponse|date('d/m/Y') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Id Utilisateur</th>
                            <td>{{ repondre.iduser }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Id Réclamation</th>
                            <td>{{ repondre.idreclamation }}</td>
                        </tr>
                    </tbody>
                </table>

                <a href="{{ path('app_repondre_index') }}" class="btn btn-primary mr-2">Retour à la liste</a>

                <a href="{{ path('app_repondre_edit', {'id': repondre.id}) }}" class="btn btn-success mr-2">Modifier</a>

                {{ include('repondre/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
