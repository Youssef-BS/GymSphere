    <style>
        * {
            font-family: "Times New Roman", Times, serif;
        }

        .carousel {
            width: 90%;
            margin: 40px auto;
            height: calc(100vh - 100px);
        } 

        .container img {
            width: 100%;
            height: calc(100vh - 100px);
            object-fit: cover;
        }

        .about {
            text-align: center;
            margin: 40px auto;
            width: 80%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .about img {
            width: 40%;
            border-radius: 20px;
        }

        .about .description {
            margin: 50px;
            width: 40%;
            text-align: left;
            text-align : center;
            font-size: 16px;
            font-weight: bold;
        }

        .gyms , .coachs , .product ,.programs{
            margin: 40px auto;
            width: 90%;
            min-height: 50vh;
            box-shadow: 4px 4px 4px 4px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-wrap: wrap;
        }

        .mini-container {
            width:24%;
            display: flex;
            margin: 30px auto;
            position: relative;
            height : 500px;
            transition: transform 0.3s ease;
            align-items: center;
            justify-content: center;
        }

        .mini-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 12px; 
}

.mini-description {
    position: absolute;
    left: 0;
    width: 100%;
    height: 0;
    background: linear-gradient(to bottom, white, black);
    border-radius: 12px;
    opacity: 0;
    transition: opacity 0.3s ease; 
    align-items : center;
    justify-content : center;
    text-align: center;
    overflow: hidden;
}

.mini-container:hover .mini-description {
    opacity: 0.8;
    top:0;
    height : 100%;
}

.description-container {
    position: absolute;
    top: 80%;
    text-align: center;
    opacity : 1 ;
    display : block;
    width : 100%;
    transition : 0.5s;
}

.mini-container:hover .description-container {
    opacity: 1;
    top : 40%;
    color : white;
}

.button {
    border: 2px solid white ;
    width :70%;
    margin : auto;
    font-size : 18px;
    cursor : pointer;
    transition : 0.2s;
    padding : 0.5em;
}

.button:hover {
    background-color: white;
    color: black;
}


h1{
    text-align: center;
    font-size: 40px;
    font-weight: bold;
}

.buttonMore{
      border: 2px solid black ;
    width :30%;
    margin : auto;
    font-size : 18px;
    cursor : pointer;
    transition : 0.2s;
    padding : 0.5em;
    margin : 40px auto;
    text-align : center;
}

.buttonMore:hover {
    background-color: black;
    color: white;
}


